{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make Debug",
            "type": "shell",
            "command": "make",
            "args": [
                "all"
            ],
            "options": {
                "cwd": "${workspaceFolder}/Debug"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "clean Debug",
            "type": "shell",
            "command": "make",
            "args": [
                "clean"
            ],
            "options": {
                "cwd": "${workspaceFolder}/Debug"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
    }